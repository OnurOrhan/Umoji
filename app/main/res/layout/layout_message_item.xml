<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/other_message_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentStart="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/other_message_txt_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/white_fill_dark_border_rounder"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/self_message_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/self_message_txt_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="11dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/white_fill_dark_border_rounder"
            android:backgroundTint="@color/secondary_variant"/>

    </RelativeLayout>

</RelativeLayout>