<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_chain_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/grid_chain_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="10dp"/>

    <ProgressBar
        android:id="@+id/grid_chain_progressbar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/grid_chain_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/grid_chain_thumbnail"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:padding="7dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:background="@drawable/white_fill_rounder"
        android:visibility="gone"/>

    <com.vanniktech.emoji.EmojiTextView
        android:id="@+id/grid_chain_tags_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/grid_chain_thumbnail"
        android:layout_alignEnd="@id/grid_chain_thumbnail"
        android:layout_margin="10dp"
        android:padding="7dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:background="@drawable/white_fill_rounder"
        android:visibility="gone"/>

</RelativeLayout>